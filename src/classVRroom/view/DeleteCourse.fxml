<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="classVRroom.view.DeleteCourseController">
   <top>
      <Label fx:id="mainLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="62.0" prefWidth="600.0" text="Selecciona el curs que vols eliminar i presiona 'Eliminar curs'" textAlignment="RIGHT" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </top>
   <center>
      <ListView fx:id="courseList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <Button fx:id="eliminarCurs" mnemonicParsing="false" onAction="#handleEliminarCurs" prefHeight="75.0" prefWidth="199.0" text="Eliminar curs" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </bottom>
</BorderPane>
